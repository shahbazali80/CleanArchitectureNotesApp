<navigation
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:id="@+id/app_nav"
app:startDestination="@id/notesListFragment" >
<fragment
    android:id="@+id/notesListFragment"
    android:name="com.example.noteapp.presentation.notes_list.NotesListFragment"
    android:label="fragment_notes_list"
    tools:layout="@layout/fragment_notes_list" >

    <action
        android:id="@+id/action_notesListFragment_to_noteDetailFragment"
        app:destination="@id/noteDetailFragment" />

</fragment>
<fragment
    android:id="@+id/noteDetailFragment"
    android:name="com.example.noteapp.presentation.note_detail.NoteDetailFragment"
    android:label="fragment_note_detail"
    tools:layout="@layout/fragment_note_detail" >

    <argument
        android:name="note"
        android:defaultValue="@null"
        app:argType="com.example.noteapp.domain.model.Note"
        app:nullable="true" />

</fragment>
</navigation>